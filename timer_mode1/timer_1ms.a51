ORG 000H
;DINH THOI 1MS MODE 1(16BIT), THACH ANH 12MHZ
;==> KHOI TAO 2 THANH GHI TH0 VA TL0 LA:
;2^16-0.5MS/1US= 65 036 = FE0C
	SETB	P3.0		;
	MOV	TMOD,#01H	; CHON MODE 1 TIMER T0
	LOOP:
	MOV	TH0,#0FEH	;DO RONG XUNG LA 500US
	MOV	TL0,#00CH		;
	SETB	TR0		;TIMER BAT DAU DEM
	HERE:
	JNB	TF0,HERE	;LAP CHO TOI KHI TF0=1
	CLR	TF0			;XOA BIT TRAN
	CLR	TR0			;DUNG TIMER
	CPL	P3.0		;DAO BIT P2.0
	SJMP	LOOP	;QUAY TRO LAI DEM TIEP
END	
	
	
	
	